<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:icon="clr-namespace:IconPacks.IconKind;assembly=IconPacks.Material"
            xmlns:productsView="clr-namespace:LaosApp.Views.ProductosView"
            xmlns:ordersView="clr-namespace:LaosApp.Views.OrderView"
             x:Class="LaosApp.Views.MainView.MainUserPage" >

    <TabBar>
        <Tab Title="Home" Icon="home">
            <ContentPage>
                <StackLayout>
                    <Label Text="Home" />
                </StackLayout>
            </ContentPage>
        </Tab>
        <Tab Title="Cart" Icon="cart">
            <ContentPage>
                <StackLayout>
                    <Label Text="Cart" />
                </StackLayout>
            </ContentPage>
        </Tab>
        <!--Orders-->
        <Tab Title="Orders" Icon="orders">
            <Shell.TitleView>
                <Label Text="Orders" />
            </Shell.TitleView>
            <ShellContent Route="OrdersPage" ContentTemplate="{DataTemplate ordersView:OrderPage}"/>
        </Tab>
        <Tab Title="Profile" Icon="profile">
           
            <ShellContent Route="ProductsPage" ContentTemplate="{DataTemplate productsView:ProductsPage}"/>
        </Tab>

    </TabBar>
    <Shell.TitleView>
        <ContentView>
            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                <Label Text="Marco Yam Cetina"  Style="{StaticResource Title1Regular}" FontSize="25" HorizontalOptions="StartAndExpand" Margin="0,10,0,0"/>
                <!--Icon cart-->
                <ImageButton Source="cart" HorizontalOptions="End" BackgroundColor="Transparent" WidthRequest="30" HeightRequest="30" Margin="0,10,10,0"/>
            </StackLayout>
        </ContentView>
    </Shell.TitleView>

</Shell>